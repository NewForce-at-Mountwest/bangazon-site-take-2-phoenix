@model Bangazon.Models.OrderViewModels.OrderPaymentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FinalOrder.OrderId" />
            <div class="form-group">
                <label asp-for="FinalOrder.DateCompleted" class="control-label"></label>
                <input asp-for="FinalOrder.DateCompleted" class="form-control" />
                <span asp-validation-for="FinalOrder.DateCompleted" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FinalOrder.PaymentTypeId" class="control-label"></label>
                <select asp-for="FinalOrder.PaymentTypeId" class="form-control" asp-items="@Model.ThePaymentTypes"></select>
                <span asp-validation-for="FinalOrder.PaymentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
